<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#FF5DD281"
                android:endColor="#FF2CD7A6"
                android:angle="90" />
            <corners android:radius="999dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_white"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
            <corners android:radius="999dp"/>
        </shape>
    </item>

</layer-list>