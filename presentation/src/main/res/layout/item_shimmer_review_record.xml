<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_seat_shimmer_record"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"/>

    <View
        android:id="@+id/v_seat_shimmer_date"
        android:layout_width="17dp"
        android:layout_height="54dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintStart_toStartOf="@id/v_seat_shimmer_record"
        app:layout_constraintTop_toBottomOf="@id/v_seat_shimmer_record"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/v_home_shimmer_image"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="10dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_seat_shimmer_date"
        app:layout_constraintTop_toTopOf="@id/v_seat_shimmer_date" />

    <View
        android:id="@+id/v_record_shimmer_stadium"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintTop_toBottomOf="@id/v_home_shimmer_image"
        app:layout_constraintStart_toStartOf="@id/v_home_shimmer_image"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        />

    <View
        android:id="@+id/v_record_shimmer_keyword"
        android:layout_width="252dp"
        android:layout_height="28dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintTop_toBottomOf="@id/v_record_shimmer_stadium"
        app:layout_constraintStart_toStartOf="@id/v_record_shimmer_stadium"
        android:layout_marginTop="16dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>