<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_stadium"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="#E1E1E1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_team_label"
        android:layout_width="100dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:background="#E1E1E1"
        app:layout_constraintStart_toEndOf="@id/iv_stadium"
        app:layout_constraintTop_toTopOf="@id/iv_stadium" />

    <TextView
        android:id="@+id/tv_stadium_title"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_marginTop="1dp"
        android:background="#E1E1E1"
        app:layout_constraintBottom_toBottomOf="@id/iv_stadium"
        app:layout_constraintStart_toStartOf="@id/tv_team_label" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="#E1E1E1"
        app:layout_constraintTop_toBottomOf="@id/iv_stadium" />

</androidx.constraintlayout.widget.ConstraintLayout>