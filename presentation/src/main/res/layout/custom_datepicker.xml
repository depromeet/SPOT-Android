<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_white_fill_32"
    android:orientation="vertical">

    <View
        android:id="@+id/view_handler"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_gray600_fill_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="36dp">

        <NumberPicker
            android:id="@+id/np_year"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/AppTheme.NumberPicker" />

        <NumberPicker
            android:id="@+id/np_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:theme="@style/AppTheme.NumberPicker" />

        <NumberPicker
            android:id="@+id/np_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:theme="@style/AppTheme.NumberPicker" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rect_white_fill_top_stroke_teritary"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="취소"
            android:textAppearance="@style/TextAppearance.Spot.Title04"
            android:textColor="@color/color_action_enabled" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/spot_green"
            android:gravity="center"
            android:paddingVertical="15dp"
            android:text="완료"
            android:textAppearance="@style/TextAppearance.Spot.Title04"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
