<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_background_white_fill_24">

    <View
        android:id="@+id/view_handler"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_background_primary_fill_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/np_months"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_stroke_tertiary"
        app:layout_constraintBottom_toTopOf="@id/tv_cancel"
        app:layout_constraintEnd_toEndOf="@id/tv_cancel"
        app:layout_constraintStart_toStartOf="@id/tv_cancel" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_foreground_white"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="15dp"
        android:text="@string/viewfinder_cancel"
        android:textAppearance="@style/TextAppearance.Spot.Title04"
        android:textColor="@color/color_action_enabled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_completed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_completed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spot_green"
        android:gravity="center"
        android:paddingVertical="15dp"
        android:text="@string/viewfinder_completed"
        android:textAppearance="@style/TextAppearance.Spot.Title04"
        android:textColor="@color/color_background_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_cancel" />


</androidx.constraintlayout.widget.ConstraintLayout>