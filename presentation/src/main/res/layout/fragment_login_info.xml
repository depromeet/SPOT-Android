<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.depromeet.designsystem.SpotAppbar
        android:id="@+id/appbar_login_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left"
        app:navigationIconColor="@color/color_foreground_body_sebtext"
        app:text="로그인 정보" />


    <TextView
        android:id="@+id/tv_login_info_link_title"
        style="@style/TextAppearance.Spot.Label08"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:text="계정 관리"
        android:textColor="@color/color_foreground_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar_login_info" />

    <TextView
        android:id="@+id/tv_setting_login_info"
        style="@style/TextAppearance.Spot.Body01"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:text="카카오"
        android:textColor="@color/color_foreground_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_info_link_title" />

    <View
        android:id="@+id/v_login_info_divider"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@color/color_background_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_setting_login_info" />


    <TextView
        android:id="@+id/tv_login_info_withdraw"
        style="@style/TextAppearance.Spot.Label08"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:paddingStart="16dp"
        android:gravity="center_vertical"
        android:text="회원 탈퇴"
        android:textColor="@color/color_foreground_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_login_info_divider" />



</androidx.constraintlayout.widget.ConstraintLayout>