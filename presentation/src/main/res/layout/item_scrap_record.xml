<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:background="@drawable/rect_white_fill_8"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ivScrapImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rect_foreground_white_fill_top_8"
        android:scaleType="centerCrop"
        android:src="@drawable/skeleton_gradient"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_stadium_test"
        tools:ignore="contentDescription"/>

    <ImageView
        android:id="@+id/ivScrap"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_scrap_active"
        app:layout_constraintBottom_toBottomOf="@id/ivScrapImage"
        app:layout_constraintEnd_toEndOf="@id/ivScrapImage"
        tools:ignore="contentDescription"/>

    <TextView
        android:id="@+id/tvScrapStadium"
        style="@style/TextAppearance.Spot.Label09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_foreground_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivScrapImage"
        tools:text="서울 잠실 야구장" />

    <TextView
        android:id="@+id/tvScrapSeat"
        style="@style/TextAppearance.Spot.Caption02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/color_foreground_body_sebtext"
        app:layout_constraintStart_toStartOf="@id/tvScrapStadium"
        app:layout_constraintTop_toBottomOf="@id/tvScrapStadium"
        tools:text="1루 네이비석 304블록" />


</androidx.constraintlayout.widget.ConstraintLayout>