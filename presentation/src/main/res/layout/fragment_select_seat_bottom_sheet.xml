<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_white_fill_32">

    <View
        android:id="@+id/vHandler"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_gray600_fill_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutCombinedTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/vHandler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llTabSelectSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSelectZone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="구역선택"
                    android:layout_marginHorizontal="4dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label05"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvSelectSeatLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="11.5dp"
                    android:background="@drawable/rect_gray900_fill"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTabSelectSeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSelectNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="4dp"
                    android:text="좌석선택"
                    android:textAppearance="@style/TextAppearance.Spot.Label05"
                    android:textColor="@color/color_foreground_caption"
                    app:layout_constraintStart_toEndOf="@id/tvSelectZone" />

                <TextView
                    android:id="@+id/tvSelectNumberLine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="11.5dp"
                    android:visibility="invisible"
                    android:background="@drawable/rect_gray900_fill"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 구역 선택 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/svSelectSeat"
        android:layout_width="0dp"
        android:layout_height="510dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCombinedTop"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llSelectSeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSelectStadium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/rect_background_tertiary_fill_stroke_tertiary_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStadium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="16dp"
                    android:paddingStart="16dp"
                    android:text="잠실야구장"
                    android:textAppearance="@style/TextAppearance.Spot.Label04"
                    android:textColor="@color/color_foreground_caption"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/ivStadiumWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warning"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="아직 잠실 야구장만 오픈되었어요!"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_error_primary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivStadiumWarning" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSelectSeatZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="13dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="32dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3"
                tools:listitem="@layout/item_select_seat" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSeatAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAlertCircle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_alert_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSeatAgain"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvSeatAgain" />

                <TextView
                    android:id="@+id/tvSeatAgain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="12dp"
                    android:paddingStart="6dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label07"
                    android:textColor="@color/color_foreground_caption"
                    app:layout_constraintStart_toEndOf="@id/ivAlertCircle"
                    android:text="구역을 다시 확인하고 싶어요!"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivChevronDown"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_chevron_down_soft"
                    android:textAppearance="@style/TextAppearance.Spot.Label07"
                    android:textColor="@color/color_foreground_caption"
                    app:layout_constraintBottom_toBottomOf="@+id/tvSeatAgain"
                    app:layout_constraintStart_toEndOf="@+id/tvSeatAgain"
                    app:layout_constraintTop_toTopOf="@+id/tvSeatAgain" />

                <ImageView
                    android:id="@+id/ivSeatAgain"
                    android:layout_width="296dp"
                    android:layout_height="296dp"
                    tools:src="@drawable/ic_launcher_background"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSeatAgain" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!--좌석 번호 -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/svSeatNumber"
        android:layout_width="0dp"
        android:layout_height="510dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutCombinedTop">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCombinedTop">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSeatBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Spinner
                    android:id="@+id/spinnerBlock"
                    style="?attr/textInputStyle"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:background="@drawable/rect_white_fill_stroke_tertiary_line_8"
                    android:dropDownWidth="match_parent"
                    android:dropDownVerticalOffset="60dp"
                    android:popupBackground="@drawable/rect_white_fill_gray100_line_12"
                    app:layout_constraintEnd_toStartOf="@+id/tvBlock"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivSelectBlockChevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@+id/spinnerBlock"
                    app:layout_constraintEnd_toEndOf="@+id/spinnerBlock"
                    app:layout_constraintTop_toTopOf="@+id/spinnerBlock" />

                <TextView
                    android:id="@+id/tvBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="8dp"
                    android:text="블록"
                    android:textAppearance="@style/TextAppearance.Spot.Label05"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOnlyColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSeatBlock">

                <EditText
                    android:id="@+id/etOnlyColumn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rect_background_secondary_fill_8"
                    android:hint="@string/viewfinder_input_example"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    android:textColorHint="@color/color_foreground_disabled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvOnlyColumn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_delete_only_column"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_x_circle"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/etOnlyColumn"
                    app:layout_constraintEnd_toEndOf="@id/etOnlyColumn"
                    app:layout_constraintTop_toTopOf="@id/etOnlyColumn" />

                <TextView
                    android:id="@+id/tvOnlyColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/viewfinder_column"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/etOnlyColumn"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOnlyTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvNoneColumnWarning"
                app:layout_constraintTop_toBottomOf="@+id/clSeatBlock">

                <EditText
                    android:id="@+id/etOnlyTable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rect_background_secondary_fill_8"
                    android:hint="@string/viewfinder_input_example"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    android:textColorHint="@color/color_foreground_disabled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvOnlyTable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDeleteOnlyTable"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_x_circle"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/etOnlyTable"
                    app:layout_constraintEnd_toEndOf="@id/etOnlyTable"
                    app:layout_constraintTop_toTopOf="@id/etOnlyTable" />

                <TextView
                    android:id="@+id/tvOnlyTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="번"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/etOnlyTable"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOnlyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@id/tvNoneColumnWarning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSeatBlock">

                <TextView
                    android:id="@+id/tvOnlyNumberW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="w"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle02"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etOnlyNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rect_background_secondary_fill_8"
                    android:hint="@string/viewfinder_input_example"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    android:textColorHint="@color/color_foreground_disabled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvOnlyNumber"
                    app:layout_constraintStart_toEndOf="@id/tvOnlyNumberW"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivDeleteOnlyNumber"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_x_circle"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/etOnlyNumber"
                    app:layout_constraintEnd_toEndOf="@id/etOnlyNumber"
                    app:layout_constraintTop_toTopOf="@id/etOnlyNumber" />

                <TextView
                    android:id="@+id/tvOnlyNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="번"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle02"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clColumnNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clSeatBlock">

                <EditText
                    android:id="@+id/etColumn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rect_background_secondary_fill_8"
                    android:hint="@string/viewfinder_input_example"
                    android:inputType="number"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp"
                    android:maxLength="5"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    android:textColorHint="@color/color_foreground_disabled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvColumn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivDeleteColumn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/ic_x_circle"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/etColumn"
                    app:layout_constraintEnd_toEndOf="@+id/etColumn"
                    app:layout_constraintTop_toTopOf="@+id/etColumn" />

                <TextView
                    android:id="@+id/tvColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="열"
                    android:textAppearance="@style/TextAppearance.Spot.Label05"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/etNumber"
                    app:layout_constraintStart_toEndOf="@+id/etColumn"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rect_background_secondary_fill_8"
                    android:hint="ex) 12"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label03"
                    android:textColor="@color/color_foreground_heading"
                    android:textColorHint="@color/color_foreground_disabled"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvNumber"
                    app:layout_constraintStart_toEndOf="@id/tvColumn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivDeleteNumber"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/ic_x_circle"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/etNumber"
                    app:layout_constraintEnd_toEndOf="@+id/etNumber"
                    app:layout_constraintTop_toTopOf="@+id/etNumber" />

                <EditText
                    android:id="@+id/etNonColumnNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/rect_gray50_fill_gray200_line_12"
                    android:hint="ex)12"
                    android:inputType="number"
                    android:paddingVertical="13dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="64dp"
                    android:textColor="#121212"
                    android:textColorHint="#C8C8C8"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="@+id/etNumber"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="번"
                    android:textAppearance="@style/TextAppearance.Spot.Label05"
                    android:textColor="@color/color_foreground_heading"
                    app:layout_constraintBottom_toBottomOf="@+id/etNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etNumber" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvNoneColumnWarning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_select_seat_error"
                android:drawablePadding="4dp"
                android:text="존재하지 않는 열이에요"
                android:textAppearance="@style/TextAppearance.Spot.Label12"
                android:textColor="@color/color_error_primary"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clColumnNumber" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clOnlyColumnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNoneColumnWarning">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnCheckColumn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/rect_background_primary_fill_4"
                    android:src="@drawable/ic_select"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/color_background_white" />

                <TextView
                    android:id="@+id/tvSelectColumn"
