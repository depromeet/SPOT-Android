                    android:textColor="@color/color_foreground_caption"
                    app:layout_constraintStart_toEndOf="@id/ivHelpCircle"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivWhatColumnChevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@+id/tvWhatColumn"
                    app:layout_constraintStart_toEndOf="@+id/tvWhatColumn"
                    app:layout_constraintTop_toTopOf="@+id/tvWhatColumn" />

                <LinearLayout
                    android:id="@+id/llColumnDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
