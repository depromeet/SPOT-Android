<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.depromeet.designsystem.SpotAppbar
        android:id="@+id/spot_appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/viewfinder_selection_area"
        android:textColor="@color/color_foreground_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menuIcon="@drawable/ic_x_close_big"
        app:menuIconColor="@color/color_foreground_body_sebtext"
        app:menuIconSize="24"
        app:navigationIcon="@drawable/ic_chevron_left_big"
        app:navigationIconColor="@color/color_foreground_body_sebtext"
        app:navigationIconSize="24"
        app:titleTextAppearance="@style/TextAppearance.Spot.Label03" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_stadium"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spot_appbar" />

    <LinearLayout
        android:id="@+id/ll_stadium_team_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tv_stadium_title"
        app:layout_constraintStart_toEndOf="@id/iv_stadium" />

    <TextView
        android:id="@+id/tv_stadium_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Spot.Caption02"
        android:textColor="@color/color_foreground_heading"
        app:layout_constraintBottom_toBottomOf="@id/iv_stadium"
        app:layout_constraintStart_toStartOf="@id/ll_stadium_team_label"
        tools:text="서울 잠실 야구장" />

    <WebView
        android:id="@+id/wv_stadium"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_zoom_description" />

    <TextView
        android:id="@+id/tv_zoom_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/color_background_positive"
        android:bufferType="spannable"
        android:gravity="center"
        android:paddingVertical="13.5dp"
        android:text="@string/viewfinder_zoom_description"
        android:textAppearance="@style/TextAppearance.Spot.Label10"
        android:textColor="@color/color_foreground_body_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_stadium" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_stroke_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_zoom_description" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle_white_fill"
        android:elevation="4dp"
        android:padding="13dp"
        android:src="@drawable/ic_reload"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_zoom_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_x_close_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_foreground_white" />

        <TextView
            android:id="@+id/tv_zoom_description_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:gravity="center"
            android:text="@string/viewfinder_zoom_description_statement"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_close" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/ic_pinch_zoom"
            app:layout_constraintEnd_toEndOf="@id/tv_zoom_description_statement"
            app:layout_constraintTop_toBottomOf="@id/tv_zoom_description_statement" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>