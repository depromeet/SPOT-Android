<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rect_white_fill_32">

    <View
        android:id="@+id/view_handler"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_gray600_fill_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_review_my_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_foreground_heading"
        android:layout_marginTop="24dp"
        android:gravity="center"
        tools:text="시야 후기"
        android:textAppearance="@style/TextAppearance.Spot.Label05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_handler" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_seat_review"
        android:layout_width="0dp"
        android:layout_height="510dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_review_my_seat">

        <LinearLayout
            android:id="@+id/layout_my_seat_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_title"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle02"
                    android:textColor="@color/color_foreground_heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="최대"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_action_enabled" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개 선택"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/good_one"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_good_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/good_two"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/good_three"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_good_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/good_four"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/good_five"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bad_title"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle02"
                    android:textColor="@color/color_foreground_heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="최대"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_action_enabled" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개 선택"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_one"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_bad_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_two"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_three"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_bad_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_four"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_five"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_bad_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_six"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="13dp"
                    android:text="@string/bad_seven"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_detail_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_detail_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@drawable/sel_review_check_write" />

                <TextView
                    android:id="@+id/tv_write_detail_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    tools:text="더 자세한 후기를 남길래요!"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle04"
                    android:textColor="@color/color_foreground_heading" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_write_detail_review">

                <EditText
                    android:id="@+id/et_detail_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray200_fill_12"
                    tools:hint="시야에 대한 구체적인 후기를 남기면 다른 사람들이 참고하기에 좋아요!"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="40dp"
                    android:gravity="start|top"
                    android:paddingEnd="12dp"
                    android:textAppearance="@style/TextAppearance.Spot.Body02"
                    android:textColor="@color/color_foreground_body_subtitle"
                    android:textColorHint="@color/color_foreground_disabled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/tv_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingBottom="10dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_foreground_disabled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_text_total"
                    app:layout_constraintEnd_toStartOf="@id/tv_text_total"
                    app:layout_constraintTop_toTopOf="@+id/tv_text_total" />

                <TextView
                    android:id="@+id/tv_text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="/200"
                    android:paddingBottom="10dp"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_foreground_disabled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/et_detail_review"
                    app:layout_constraintEnd_toEndOf="@id/et_detail_review" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_text_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warning"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_detail_review_warning" />

                <TextView
                    android:id="@+id/tv_detail_review_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="200자 내로 입력해주세요!"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_error_primary"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/iv_text_warning"
                    app:layout_constraintTop_toBottomOf="@id/et_detail_review" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvBlank"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:visibility="visible" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_complete_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rect_action_disabled_fill_8"
            android:clickable="false"
            android:enabled="false"
            android:gravity="center"
            android:text="완료"
            android:textAppearance="@style/TextAppearance.Spot.Label02"
            android:textColor="@color/color_foreground_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>