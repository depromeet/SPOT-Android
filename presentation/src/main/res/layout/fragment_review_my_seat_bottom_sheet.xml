<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="645dp"
    android:background="@drawable/rect_white_fill_32">

    <View
        android:id="@+id/view_handler"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rect_gray600_fill_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_review_my_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_foreground_heading"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="시야 후기"
        android:textAppearance="@style/TextAppearance.Spot.Label05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_handler" />

    <ScrollView
        android:id="@+id/sv_seat_review"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_complete_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_review_my_seat">

        <LinearLayout
            android:id="@+id/layout_my_seat_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이런 점이 좋아요"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle02"
                    android:textColor="@color/color_foreground_heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="최대"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_action_enabled" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개 선택"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="💺️ 충분한 다리 공간"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_good_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🔥 생생한 응원 열기"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🏟️ 좋은 시야각"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_good_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🍃 선선한 그늘존"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_good_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🚶 가까운 출입구"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이런 점은 아쉬워요"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle02"
                    android:textColor="@color/color_foreground_heading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="최대"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_action_enabled" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개 선택"
                    android:textAppearance="@style/TextAppearance.Spot.Caption01"
                    android:textColor="@color/color_foreground_caption" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🌞 온종일 햇빛존"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_bad_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🤢 벌레가 많은 자리"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🥅 신경쓰이는 그물망"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_bad_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🥲 시야방해 기둥"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bad_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="🥤 컵홀더가 없는 자리"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />

                <TextView
                    android:id="@+id/tv_bad_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/sel_review_color_seat_bad_review"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="15dp"
                    android:text="📢시끄러운 스피커"
                    android:textAppearance="@style/TextAppearance.Spot.Label08"
                    android:textColor="@color/color_foreground_body_subtitle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_detail_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_detail_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sel_review_check_write" />

                <TextView
                    android:id="@+id/tv_write_detail_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="더 자세한 후기를 남길래요!"
                    android:textAppearance="@style/TextAppearance.Spot.Subtitle04"
                    android:textColor="@color/color_foreground_heading" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_write_detail_review">

                <EditText
                    android:id="@+id/et_detail_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_gray200_fill_12"
                    android:hint="시야에 대한 구체적인 후기를 남기면 다른 사람들이 참고하기에 좋아요"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="32dp"
                    android:textAppearance="@style/TextAppearance.Spot.Body02"
                    android:textColor="@color/color_foreground_body_subtitle"
                    android:textColorHint="@color/color_foreground_disabled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_foreground_disabled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/et_detail_review"
                    app:layout_constraintEnd_toStartOf="@id/tv_text_total"
                    app:layout_constraintTop_toTopOf="@id/tv_text_total" />

                <TextView
                    android:id="@+id/tv_text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="16dp"
                    android:text="/200"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_foreground_disabled"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/et_detail_review"
                    app:layout_constraintEnd_toEndOf="@id/et_detail_review" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_text_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warning"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_detail_review_warning" />

                <TextView
                    android:id="@+id/tv_detail_review_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="200자 내로 입력해주세요!"
                    android:textAppearance="@style/TextAppearance.Spot.Label12"
                    android:textColor="@color/color_error_primary"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/iv_text_warning"
                    app:layout_constraintTop_toBottomOf="@id/et_detail_review" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_complete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:enabled="false"
        android:gravity="center"
        android:paddingVertical="19dp"
        android:text="완료"
        android:background="@drawable/rect_action_disabled_fill_8"
        android:textAppearance="@style/TextAppearance.Spot.Label02"
        android:textColor="@color/color_foreground_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>