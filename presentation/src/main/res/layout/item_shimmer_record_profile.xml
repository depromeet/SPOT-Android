<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/v_seat_shimmer_profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/oval_e1e1e1_fill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>
    <View
        android:id="@+id/v_seat_shimmer_profile_name"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>

    <View
        android:id="@+id/v_seat_shimmer_name"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintStart_toStartOf="@id/v_seat_shimmer_profile_image"
        app:layout_constraintTop_toBottomOf="@id/v_seat_shimmer_profile_image"
        app:layout_constraintEnd_toEndOf="@id/v_seat_shimmer_profile_image"
        android:layout_marginTop="12dp"/>

    <View
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_foreground_disabled"
        app:layout_constraintTop_toBottomOf="@id/v_seat_shimmer_name"
        app:layout_constraintStart_toStartOf="@id/v_seat_shimmer_name"
        app:layout_constraintEnd_toEndOf="@id/v_seat_shimmer_name"/>






</androidx.constraintlayout.widget.ConstraintLayout>