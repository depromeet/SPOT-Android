<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DepromeetAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Remove font padding. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.DepromeetAndroid" parent="Base.Theme.DepromeetAndroid" />


    <style name="SpinnerDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="TransparentBottomSheetDialogFragment" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TransparentMaterialDialogFragment" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TransparentBottomSheetNumberPickerDialogFragment" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/color_foreground_heading</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/font_pretendard_semibold</item>
        <item name="colorControlNormal">@color/color_action_enabled</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="bottomSheetStyle">@style/CustomRoundedBackgroundBottomSheet</item>
        <item name="android:navigationBarColor">@color/color_background_white</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomRoundedBackgroundBottomSheet</item>
    </style>
    <style name="CustomRoundedBackgroundBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_white_fill_top_24</item>
    </style>

    <style name="Month.NumberPicker" parent="Widget.AppTheme.BottomSheet">
        <item name="android:textColorPrimary">@color/color_foreground_heading</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/font_pretendard_semibold</item>
        <item name="colorControlNormal">@color/color_action_enabled</item>
    </style>

    <style name="TransparentDialogFragment" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="android:Widget.Material.NumberPicker">
        <item name="colorControlNormal">@color/color_action_enabled</item>
        <item name="android:fontWeight">600</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textColor">@color/color_foreground_heading</item>
        <item name="android:fontFamily">@font/font_pretendard_semibold</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="YearSpinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>