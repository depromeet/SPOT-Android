<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_negative" />
            <corners android:radius="1000dp" />
            <stroke android:width="1dp" android:color="@color/color_stroke_negative" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_tertiary" />
            <corners android:radius="1000dp" />
        </shape>
    </item>
</selector>