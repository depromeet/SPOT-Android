<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_positive" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/color_stroke_positive_secondary" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_secondary" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>